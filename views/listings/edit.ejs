<% layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
    <h3>Edit Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate 
        class="needs-validation">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required>
            <div class="valid-feedback">Title looks good</div>
        
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Desciption</lable>
        <textarea name="listing[description]" class="form-control"required><%=listing.description%> </textarea>
        <div class="invalid-feedback">Please enter valid description</div>
    </div>
       <div class="mb-3">
        <lable for="image" class="form-label">Image Link</lable> 
        <input name="listing[image]" value="<%=listing.image%>"type="text" class="form-control" required>
      
    </div>
       <div class="row">
       <div class="mb-3">
        <lable for="price" class="form-label">Price</lable> 
        <input name="listing[price]" value="<%=listing.price%>" type="number" class="form-control" required>
        <div class="invalid-feedback">Price should be valid</div>    
    </div>

        <div class="mb-3 col-md-4">
            <lable for="country" class="form-label">Country</lable> 
            <input name="listing[country]" value="<%=listing.country%>" type="text"class="form-control" required>
            <div class="invalid-feedback">Please Enter valid Country</div>
        </div>
        </div>
        <div class="mb-3 col-md-8">
            <lable for="location" class="form-label">Location</lable> 
            <input name="listing[location]" value="<%=listing.location%>" type="text"class="form-control" required>
            <div class="invalid-feedback">Please enter valid place</div>
        </div>

        
       
        <button class="btn btn-dark edit-btn">Edit</button>
        <br/><br/>
    </form>
    </div>
    </div>

    <!-- class-needs validation ke baad script.js add karna -->
